# Backend Environment Variables Configuration

# Database Configuration
SPRING_DATASOURCE_URL=jdbc:mysql://localhost:3306/ecommerce
SPRING_DATASOURCE_USERNAME=root
SPRING_DATASOURCE_PASSWORD=your_mysql_password

# JWT Configuration
SPRING_APP_JWT_SECRET=your_secret_key_at_least_256_bits_long_change_this_in_production
SPRING_APP_JWT_EXPIRATION_MS=3000000

# Email Configuration (for OTP password reset)
SPRING_MAIL_HOST=smtp.gmail.com
SPRING_MAIL_PORT=587
SPRING_MAIL_USERNAME=your_email@gmail.com
SPRING_MAIL_PASSWORD=your_email_app_password

# Image Storage Path
PROJECT_IMAGE=images/

# Server Configuration
SERVER_PORT=9999

# Logging Level (optional)
LOGGING_LEVEL_ORG_SPRINGFRAMEWORK=INFO
LOGGING_LEVEL_COM_ECOMMERCE1=DEBUG
